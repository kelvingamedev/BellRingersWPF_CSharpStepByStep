<Window x:Class="BellRingers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BellRingers"
        mc:Ignorable="d"
        Title="Middleshire Bell Ringers Association - Members" Height="611" Width="600"
        Closing="Window_Closing">
    <Window.Resources>
        <Style x:Key="bellRingersStyle" TargetType="Control">
            <Setter Property="Button.Background" Value="Gray"/>
            <Setter Property="Button.Foreground" Value="White"/>
            <Setter Property="Button.FontFamily" Value="Comic Sans MS"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Blue"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="bellRingersFontStyle" TargetType="Control">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Image x:Name="image" Margin="0,0,0,0" Panel.ZIndex="0">
            <Image.Source>
                <BitmapImage UriSource="bell.gif"/>
            </Image.Source>
        </Image>
        <Label x:Name="labelFirstName" Content="First Name:" HorizontalAlignment="Left" Margin="29,25,0,0" VerticalAlignment="Top" Height="28" Width="75" Style="{StaticResource bellRingersFontStyle}"/>
        <TextBox x:Name="textBoxFirstName" HorizontalAlignment="Left" Height="28" Margin="121,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" Style="{StaticResource bellRingersStyle}"/>
        <Label x:Name="labelLastName" Content="Last Name:" HorizontalAlignment="Left" Margin="305,25,0,0" VerticalAlignment="Top" Height="28" Width="75" Style="{StaticResource bellRingersFontStyle}"  />
        <TextBox x:Name="textBoxLastName" HorizontalAlignment="Left" Height="23" Margin="380,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" Style="{StaticResource bellRingersStyle}"/>
        <Label x:Name="labelTower" Content="Tower:" HorizontalAlignment="Left" Margin="29,72,0,0" VerticalAlignment="Top" Height="28" Width="75" Style="{StaticResource bellRingersFontStyle}"/>
        <ComboBox x:Name="comboBoxTowers" HorizontalAlignment="Left" Margin="121,72,0,0" VerticalAlignment="Top" Width="275" Height="23" Style="{StaticResource bellRingersFontStyle}" />
        <CheckBox x:Name="isCaptain" Content="Captain" HorizontalAlignment="Left" Margin="420,72,0,0" VerticalAlignment="Top" Height="23" Width="75" Style="{StaticResource bellRingersFontStyle}"/>
        <Label x:Name="labelMemberSince" Height="23" Width="90" Content="Member since:" HorizontalAlignment="Left" Margin="29,134,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.685,0.731" Style="{StaticResource bellRingersFontStyle}"/>
        <DatePicker x:Name="dateMemberSince" Width="275" Height="23" HorizontalAlignment="Left" Margin="121,134,0,0" VerticalAlignment="Top" />
        <GroupBox x:Name="groupYearsOfExperience"  Height="200" Header="Experience"  Margin="29,174,0,0" Width="258" VerticalAlignment="Top">
            <StackPanel HorizontalAlignment="Left" Height="100" Margin="0,0,0,0" VerticalAlignment="Top" Width="150" >
                <RadioButton x:Name="novice" Content="Up to 1 year"  Margin="0,10,0,0" Width="120" Height="16"/>
                <RadioButton x:Name="intermediate" Content="1 to 4 years" Margin="0,10,0,0" Width="120" Height="16"/>
                <RadioButton x:Name="experienced" Content="5 to 9 years" Margin="0,10,0,0" Width="120" Height="16"/>
                <RadioButton x:Name="accomplished" Content="10 or more years" Margin="0,10,0,0" Width="120" Height="16"/>
            </StackPanel>
        </GroupBox>
        <ListBox x:Name="listBoxMethods" HorizontalAlignment="Left" Height="200" Margin="310,174,0,0" VerticalAlignment="Top" Width="245"/>
        <Button x:Name="buttonAdd" Content="Add" HorizontalAlignment="Left" Margin="188,388,0,0" VerticalAlignment="Top" Width="75" Height="23" Style="{StaticResource bellRingersStyle}" Click="buttonAdd_Click"/>
        <Button x:Name="buttonClear" Content="Clear" HorizontalAlignment="Left" Margin="313,388,0,0" VerticalAlignment="Top" Width="75" Height="23" RenderTransformOrigin="-1.48,2.55" Style="{StaticResource bellRingersStyle}" Click="buttonClear_Click"/>

    </Grid>
</Window>
